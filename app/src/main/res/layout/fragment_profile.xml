<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="460dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="90dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="130dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/avenir_next_bold"
        android:lineSpacingExtra="10sp"
        android:text="Профиль"
        android:textColor="#ffffff"
        android:textSize="22sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_next_bold"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="8sp"
        android:text="Ваши данные" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_next_light"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="Эти данные необходимы для оформления заказа в нашем магазине."
        />
    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#209bd5c5"
        android:hint="Фамилия"
        android:padding="5dp"
        android:textColorHint="@color/white_transparent" />
    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#209bd5c5"
        android:hint="Имя"
        android:padding="5dp"
        android:textColorHint="@color/white_transparent" />
    <EditText
        android:id="@+id/third_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#209bd5c5"
        android:hint="Отчество"
        android:padding="5dp"
        android:textColorHint="@color/white_transparent" />
    <EditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#209bd5c5"
        android:hint="+7  (999)  000  13  15"
        android:padding="5dp"
        android:textColorHint="@color/white_transparent" />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#209bd5c5"
        android:hint="Email"
        android:padding="5dp"
        android:textColorHint="@color/white_transparent" />
    <LinearLayout
        android:id="@+id/confirm_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/auth_button_bg_green"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:textStyle="bold">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_bold"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:text="Сохранить данные"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>