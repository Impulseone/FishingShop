<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginTop="90dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="130dp"
    tools:context=".view.main.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context=".view.main.MainActivity">

        <TextView
            android:id="@+id/main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_bold"
            android:lineSpacingExtra="10sp"
            android:text="@string/main"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/search_product_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_tv"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edit_text_bg">

            <EditText
                android:id="@+id/search_product"
                android:layout_width="match_parent"
                android:layout_marginEnd="45dp"
                android:layout_height="40dp"
                android:hint="@string/search"
                android:imeOptions="actionDone"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_bg"
                android:textColorHint="@color/grey"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/search"
                android:src="@drawable/search_icon"
                app:tint="@color/brown" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/promotions"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/search_product_layout"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shares_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/avenir_next_bold"
                    android:text="@string/discounts"
                    android:textColor="#aedef0"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/avenir_next_medium"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/discounts_for_you"
                    android:textColor="#c8dde5"
                    android:textSize="11sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_resource_float" />
        </LinearLayout>

        <TextView
            android:id="@+id/actual_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promotions"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/avenir_next_bold"
            android:lineSpacingExtra="8sp"
            android:text="@string/actual"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actual_tv"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/new_products"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@drawable/shares_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/avenir_next_bold"
                    android:lineSpacingExtra="5sp"
                    android:shadowColor="#29000000"
                    android:shadowDy="3"
                    android:shadowRadius="6"
                    android:text="@string/NEW"
                    android:textColor="#f0edae"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_hook_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/avenir_next_bold"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/news"
                    android:textColor="#f0edae"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/avenir_next_medium"
                    android:text="@string/actual_in_season"
                    android:textColor="#e2e5d0"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sales_products"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/shares_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/avenir_next_bold"
                    android:lineSpacingExtra="5sp"
                    android:shadowColor="#29000000"
                    android:shadowDy="3"
                    android:shadowRadius="6"
                    android:text="@string/sale"
                    android:textColor="#f0c0ae"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chair" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/avenir_next_bold"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/sales"
                    android:textColor="#f0c0ae"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/avenir_next_medium"
                    android:text="@string/profitable_prices"
                    android:textColor="#e2cfc8"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>