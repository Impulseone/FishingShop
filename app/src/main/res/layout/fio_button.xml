<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/fio_button_bg">
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_icon_awesome_user_circle"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="7dp"
        android:layout_marginStart="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_bold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#deda98"
            android:lineSpacingExtra="7sp"
            android:text="Заполните ваши данные"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_light"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="5sp"
            android:text="ФИО, Телефон, Email…"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/avenir_next_bold"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="4sp"
        android:text="Перейти в профиль"
        />

</RelativeLayout>