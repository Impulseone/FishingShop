<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authorization_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_splash_screen"
    tools:context=".view.main.SubscriptionActivity">

    <TextView
        android:id="@+id/sub_message"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:fontFamily="@font/avenir_next_bold"
        android:lineSpacingExtra="7sp"
        android:text="@string/get_subscription_for_content"
        android:textColor="#ffffff"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/logo_fishing_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/logo_fishing_shop" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/subscription_button"
        android:layout_width="246dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:background="@drawable/auth_button_bg_green"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_bold"
            android:lineSpacingExtra="7sp"
            android:text="@string/get_subscription"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"/>

</RelativeLayout>