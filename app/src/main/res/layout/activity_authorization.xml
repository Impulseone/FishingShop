<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_authorization">

    <TextView
        android:id="@+id/auth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/avenir_next_bold"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="Авторизация" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/avenir_next_light"
        android:lineSpacingExtra="8sp"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:text="по номеру телефона" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="367dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_light"
            android:lineSpacingExtra="5sp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="Введите номер телефона" />

        <EditText
            android:id="@+id/phone_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_medium"
            android:lineSpacingExtra="9sp"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textColorHint="@color/grey"
            android:backgroundTint="@color/white"
            android:textCursorDrawable="@color/white"
            android:cursorVisible="true"
            android:maxLines="1"
            android:inputType="phone"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:hint="+7  (999)  000  13  15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/get_code_button"
        android:layout_width="246dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/auth_button_bg_green"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/get_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_bold"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="7sp"
            android:text="Получить код"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/get_code_button_loading"
        android:visibility="gone"
        android:layout_width="246dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/auth_button_bg_green"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/progress_indicator"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </LinearLayout>
</RelativeLayout>